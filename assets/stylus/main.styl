bright-blue = #45d9fd
light-blue = #8FDEF2
white-color = #F4F4F4
accent-color = #EE2560
text-color = #08182b
white-background = #fafafa
shadow-color = rgba(187, 187, 187, .5)

body
	margin 0
	padding 0
	height 100vh
	box-sizing border-box
	overflow hidden
	font-family "Helvetica Neue", Helvetica, Verdana, sans-serif
	#sidebar
		flex 0 0 20%
		background-color white-color
		height 100vh
		display flex
		flex-flow column
		color white
		#profileInfo
			margin 20px
			align-items center
			justify-content space-around
			#imgcontainer
				padding 0
				margin 0
				width: 9vw
				img
					width: 100%

			div:not(#imgcontainer)
				display flex
				flex 0 0
				flex-flow column-reverse nowrap
				align-items center
				margin 0 15px
				.nameContainer
					text-align center
					background-color accent-color
					padding 10px 5px
					box-shadow 5px 5px 0 0 shadow-color
				#surname
					margin-top 15px
					transform skewX(30deg) rotate(5deg) scale(1.1) translateY(-2px)
					box-shadow 5px 5px 0 0 rgba(187, 187, 187, .5)
					span
						display block
						transform skewX(-30deg) rotate(-5deg) scale(0.9)
				/* Reverse transform to straighten the text in the span */
				#realname
					padding 10px 5px
					margin-bottom 20px
					transform skewX(-20deg) rotate(-5deg)
					span
						display block
						transform skewX(20deg) rotate(5deg)
		#navbar
			margin-top 20px
			display flex
			flex-flow column
			align-content stretch
			font-size 1.2em
			line-height 3em
			a
				/* Have to force color on A otherwise it won't be styled */
				color white
				background-color light-blue
				text-decoration none
				padding-left 1.5em
			.active
				background-color bright-blue
				transform-style preserve-3d
				transform-origin left center
				animation-duration 100ms
				animation-name testIn
				animation-timing-function ease-out
				box-shadow 5px 6px 0 0 shadow-color
				animation-fill-mode forwards
				font-weight bold

		#socnet
			background-color accent-color
			width 100%
			align-self center
			margin-top auto
			a
				color white
				display flex
				border none
				text-decoration none
				font-weight bold
				font-size 1.25em
				margin-top: .2em
				vertical-align super
				padding-left 1.75em
			img
				width 1.5em
				height 1.5em
				vertical-align bottom
			span
				marginTop 0.2em

	main
		display flex
		flex 1 1
		padding 0 5%
		align-content center
		color text-color
		background-color white-background

		.project-card
			width 20em
			text-align justify
			background-color white
			padding 1em;
			border double 1px accent-color
			img
				width 30%
				float left
				margin 0 1em 0 0
				box-shadow 3px 4px 0 0 rgba(187, 187, 187, .5)
		a
			color text-color
			padding .3em
		a:hover
			color white-color
			background-color accent-color

/* class definitions */
.flexRow
	display flex
	flex-flow row


@keyframes testIn {
	from {
		transform perspective(1em) rotateY(0deg) scaleX(1)
	}

	to {
		transform perspective(1em) rotateY(-0.3deg) scaleX(0.92)
	}
}