body
	margin 0
	padding 0
	height 100vh
	box-sizing border-box
	overflow hidden
	font-family "Helvetica Neue", Helvetica, Verdana, sans-serif

	#sidebar
		flex 0 0 20%
		background-color #F4F4F4
		height 100vh
		display flex
		flex-flow column

	#profileInfo
		margin 20px
		align-items center
		justify-content space-around

		img
			width 9vw

		div
			display flex
			flex-flow column-reverse nowrap
			align-items center
			margin 0 15px

			.nameContainer
				text-align center
				background-color #EE2560
				color white
				padding 10px 5px
				box-shadow 5px 5px 0 0 rgba(187, 187, 187, .5)

			.surname
				margin-top 15px
				transform skewX(30deg) rotate(5deg) scale(1.1) translateY(-2px)
				box-shadow 5px 5px 0 0 rgba(187, 187, 187, .5)
				span
					display block
					transform skewX(-30deg) rotate(-5deg) scale(0.9)
			/* Reverse transform to straighten the text in the span */

			.realName
				padding 10px 5px
				margin-bottom 20px
				transform skewX(-20deg) rotate(-5deg)
				span
					display block
					transform skewX(20deg) rotate(5deg)

.flexRow
	display flex
	flex-flow row

.active
	background-color #45d9fd !important
	transform-style preserve-3d
	transform-origin left center
	animation-duration 50ms
	animation-name testIn
	animation-timing-function ease-out
	box-shadow 5px 6px 0 0 rgba(187, 187, 187, .5)
	animation-fill-mode forwards
	font-weight bold

@keyframes testIn {
	from {
		transform perspective(1em) rotateY(0deg) scaleX(1)
	}

	to {
		transform perspective(1em) rotateY(-0.3deg) scaleX(0.92)
	}
}